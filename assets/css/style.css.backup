/* Accessibility */
.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

/* Enhanced focus indicators for keyboard navigation */
a:focus, 
button:focus, 
.btn:focus,
.nav-link:focus {
  outline: 2px solid #4a90a4;
  outline-offset: 2px;
  box-shadow: 0 0 0 3px rgba(74, 144, 164, 0.3);
}

.navbar-toggler:focus {
  outline: 2px solid #4a90a4;
  outline-offset: 2px;
  box-shadow: 0 0 0 3px rgba(74, 144, 164, 0.3);
}

